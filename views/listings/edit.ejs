<% layout("layouts/boilerplate.ejs") %>
<body>
  <div class="row mt-3">
    <div class="col-md-8 offset-md-2">
      <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" class="needs-validation" novalidate
        enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input name="listing[title]" value="<%=listing.title%>" type="text" class="form-control" id="title"
          required>
          <div class="valid-feedback">
            <b>Title looks good</b> 
        </div> 
        </div>
      
        <div class="mb-3">
          <label for="desc" class="form-label">Description : </label>
          <textarea name="listing[description]" id="desc"  class="form-control" required><%=listing.description%></textarea>
             <div class="invalid-feedback">
              <b>Please enter Your Description</b> 
             </div> 
        </div>
        <div class="mb-3">
          Original Listing Image <br>
          <img src="<%=originalimageurl%>" style="height:20rem;width: 20rem;">
        </div> 

        <div class="mb-3">
          <label for="image" class="form-label">Upload new Image</label>
          <input name="listing[image]"id="image"  type="file"  class="form-control">
        </div>
        <div class="row">
          <div class="col-4">
            <div class="mb-3">
              <label for="price" class="form-label">Price :</label>
              <input name="listing[price]"id="price" type="number" value="<%=listing.price%>" class="form-control" required>
              <div class="invalid-feedback">
                <b>Please Select Valid price</b> 
            </div>
             </div>
          </div>
          <div class="col-8">
            <div class="mb-3">
              <label for="country" class="form-label">Country :</label>
              <input name="listing[country]" id="country" type="text" value="<%=listing.country%>" class="form-control" required>
              <div class="invalid-feedback">
                <b>Please enter Country name</b> 
            </div> 
            </div>
          </div>
        </div>
       
      
        
        <div class="mb-3">
          <label for="loc" class="form-label">Location :</label>
          <input name="listing[location]" id="loc" type="text" value="<%=listing.location%>" class="form-control" required>
          <div class="invalid-feedback">
            <b>Please enter Location</b> 
        </div>
        </div>
        <button class="btn btn-dark edit-btn">Edit </button>
        <br><br><br><br><br>
      </form>
        
    </div>
  </div>
 
    
</body>
